<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="ezbookstore"
                   namespace="ezbookstore.Models">

  <class name="Book">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Title"  />
    <property name="Author" />
    <property name="Genre" />
    <property name="Language" />
    <property name="Price" />
  </class>
</hibernate-mapping>